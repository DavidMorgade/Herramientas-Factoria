<Window x:Class="Herramientas_Factoria.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inicio de Sesión" Height="400" Width="600" Background="#2D2D30"
        WindowStartupLocation="CenterScreen"
        >
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Iniciar Sesión" FontSize="24" FontWeight="Bold" Foreground="#FFFFFF" HorizontalAlignment="Center" Grid.Row="0" Margin="0,10,0,20"/>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            <TextBox Name="Username" Margin="0,5,0,10" FontSize="14" />
            <PasswordBox Name="Password" Margin="0,5,0,10" FontSize="14" />
        </StackPanel>

        <Button Cursor="Hand" Click="LoginButton_Click" Content="Iniciar Sesión" Grid.Row="2" Margin="0,20" Background="#007ACC" Foreground="White" Height="40" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Center" Width="200"/>

    </Grid>
</Window>

