<Window x:Class="Herramientas_Factoria.Paginas.PDF.UnirPDF"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Unir PDFs" Height="800" Width="1000" Background="#2D2D30"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Unir Archivos PDF" FontSize="24" FontWeight="Bold" Foreground="#FFFFFF" HorizontalAlignment="Center" Margin="10" Grid.Row="0"/>
        <TextBlock Text="Une PDFs y ponlos en el orden que prefieras." FontSize="18"  Foreground="#FFFFFF" HorizontalAlignment="Center" Margin="40" Grid.Row="1"/>
        <!-- StackPanel para los botones centrados en la parte superior -->
        <Button Grid.Row="1" Width="300" Height="50" Background="#007acc" Foreground="White" Cursor="Hand" Click="Button_Seleccionar">
            <TextBlock Text="Seleccionar archivos PDF" FontSize="20" HorizontalAlignment="Center"/>
        </Button>

        <!-- Botón Volver centrado en la parte inferior -->
        <StackPanel Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,10">
            <Button Click="Button_Volver" Cursor="Hand" Content="Volver" Width="200" Margin="0,20" Background="#1E1E1E" Foreground="White" Height="40" FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>
